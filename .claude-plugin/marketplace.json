{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "agentic-forge",
  "version": "1.0.0",
  "description": "Ready-to-use collection of modular extensions for Claude Code including commands, sub-agents, skills, and hooks for various development scenarios",
  "owner": {
    "name": "Étienne St-Pierre",
    "email": "me@estpierre.dev"
  },
  "plugins": [
    {
      "name": "appsec",
      "source": "./",
      "description": "Comprehensive application security toolkit for identifying vulnerabilities, analyzing risks, and validating dependencies at an expert level",
      "version": "1.0.0",
      "category": "security",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": [
        "security",
        "appsec",
        "vulnerability",
        "risk-analysis",
        "dependencies",
        "audit"
      ],
      "strict": false,
      "commands": [
        "./plugins/appsec/commands/security-review.md",
        "./plugins/appsec/commands/scope-security.md"
      ],
      "agents": ["./plugins/appsec/agents/appsec-specialist.md"]
    },
    {
      "name": "agentic-sdlc",
      "source": "./",
      "description": "[Experimental] Fully autonomous SDLC workflow orchestrated via Python, with no user interaction",
      "version": "0.0.1",
      "category": "sdlc",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": [
        "experimental",
        "sdlc",
        "autonomous",
        "agentic",
        "python",
        "orchestration",
        "ci-cd",
        "workflows"
      ],
      "strict": false,
      "commands": [
        "./experimental-plugins/agentic-sdlc/commands/configure.md",
        "./experimental-plugins/agentic-sdlc/commands/design.md",
        "./experimental-plugins/agentic-sdlc/commands/plan.md",
        "./experimental-plugins/agentic-sdlc/commands/plan-feature.md",
        "./experimental-plugins/agentic-sdlc/commands/plan-bug.md",
        "./experimental-plugins/agentic-sdlc/commands/plan-chore.md",
        "./experimental-plugins/agentic-sdlc/commands/plan-build.md",
        "./experimental-plugins/agentic-sdlc/commands/implement.md",
        "./experimental-plugins/agentic-sdlc/commands/implement-from-plan.md",
        "./experimental-plugins/agentic-sdlc/commands/review.md",
        "./experimental-plugins/agentic-sdlc/commands/test.md"
