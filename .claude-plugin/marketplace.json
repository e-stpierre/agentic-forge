{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "agentic-forge",
  "version": "1.0.0",
  "description": "Ready-to-use collection of modular extensions for Claude Code including commands, sub-agents, skills, and hooks for various development scenarios",
  "owner": {
    "name": "Étienne St-Pierre",
    "email": "me@estpierre.dev"
  },
  "plugins": [
    {
      "name": "appsec",
      "source": "./",
      "description": "Comprehensive application security toolkit for identifying vulnerabilities, analyzing risks, and validating dependencies at an expert level",
      "version": "1.0.0",
      "category": "security",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": [
        "security",
        "appsec",
        "vulnerability",
        "risk-analysis",
        "dependencies",
        "audit"
      ],
      "strict": false,
      "commands": [
        "./plugins/appsec/commands/security-review.md",
        "./plugins/appsec/commands/scope-security.md"
      ],
      "agents": ["./plugins/appsec/agents/appsec-specialist.md"]
    },
    {
      "name": "interactive-sdlc",
      "source": "./",
      "description": "Interactive SDLC commands for guided development within Claude Code sessions",
      "version": "1.0.0",
      "category": "sdlc",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": [
        "sdlc",
        "interactive",
        "planning",
        "building",
        "validation",
        "workflows",
        "git",
        "github"
      ],
      "strict": false,
      "commands": [
        "./plugins/interactive-sdlc/commands/configure.md",
        "./plugins/interactive-sdlc/commands/plan/plan-chore.md",
        "./plugins/interactive-sdlc/commands/plan/plan-bug.md",
        "./plugins/interactive-sdlc/commands/plan/plan-feature.md",
        "./plugins/interactive-sdlc/commands/dev/build.md",
        "./plugins/interactive-sdlc/commands/dev/validate.md",
        "./plugins/interactive-sdlc/commands/dev/document.md",
        "./plugins/interactive-sdlc/commands/workflows/one-shot.md",
        "./plugins/interactive-sdlc/commands/workflows/plan-build-validate.md",
        "./plugins/interactive-sdlc/commands/analyse/analyse-bug.md",
        "./plugins/interactive-sdlc/commands/analyse/analyse-doc.md",
        "./plugins/interactive-sdlc/commands/analyse/analyse-debt.md",
        "./plugins/interactive-sdlc/commands/analyse/analyse-style.md",
        "./plugins/interactive-sdlc/commands/analyse/analyse-security.md",
        "./plugins/interactive-sdlc/commands/git/git-branch.md",
        "./plugins/interactive-sdlc/commands/git/git-commit.md",
        "./plugins/interactive-sdlc/commands/git/git-pr.md",
        "./plugins/interactive-sdlc/commands/github/create-gh-issue.md",
        "./plugins/interactive-sdlc/commands/github/read-gh-issue.md"
      ]
    },
    {
      "name": "agentic-workflows",
      "source": "./",
      "description": "[Experimental] YAML-based workflow orchestration with parallel execution, conditional logic, retry mechanisms, and persistent memory for complex multi-step tasks",
      "version": "0.0.1",
      "category": "sdlc",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": [
        "experimental",
        "workflows",
        "yaml",
        "orchestration",
        "parallel",
        "autonomous",
        "agentic",
        "memory",
        "python"
      ],
      "strict": false,
      "commands": [
        "./experimental-plugins/agentic-workflows/commands/analyse.md",
        "./experimental-plugins/agentic-workflows/commands/build.md",
        "./experimental-plugins/agentic-workflows/commands/orchestrate.md",
        "./experimental-plugins/agentic-workflows/commands/plan.md",
        "./experimental-plugins/agentic-workflows/commands/validate.md",
        "./experimental-plugins/agentic-workflows/commands/git/branch.md",
        "./experimental-plugins/agentic-workflows/commands/git/commit.md",
        "./experimental-plugins/agentic-workflows/commands/git/pr.md"
      ],
      "agents": [
        "./experimental-plugins/agentic-workflows/agents/explorer.md",
        "./experimental-plugins/agentic-workflows/agents/reviewer.md"
      ],
      "skills": [
        "./experimental-plugins/agentic-workflows/skills/create-checkpoint.md",
        "./experimental-plugins/agentic-workflows/skills/create-log.md",
        "./experimental-plugins/agentic-workflows/skills/create-memory.md",
        "./experimental-plugins/agentic-workflows/skills/search-memory.md"
      ]
    }
  ]
}
