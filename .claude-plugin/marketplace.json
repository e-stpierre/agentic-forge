{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "claude-plugins",
  "version": "1.0.0",
  "description": "Ready-to-use collection of modular extensions for Claude Code including commands, sub-agents, skills, and hooks for various development scenarios",
  "owner": {
    "name": "Étienne St-Pierre",
    "email": "me@estpierre.dev"
  },
  "plugins": [
    {
      "name": "appsec",
      "source": "./",
      "description": "Comprehensive application security toolkit for identifying vulnerabilities, analyzing risks, and validating dependencies at an expert level",
      "version": "1.0.0",
      "category": "security",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": ["security", "appsec", "vulnerability", "risk-analysis", "dependencies", "audit"],
      "strict": false,
      "commands": ["./plugins/appsec/commands/security-review.md", "./plugins/appsec/commands/scope-security.md"],
      "agents": ["./plugins/appsec/agents/appsec-specialist.md"]
    },
    {
      "name": "sdlc",
      "source": "./",
      "description": "Software Development Lifecycle toolkit with planning, implementation, review, and testing workflows",
      "version": "2.0.0",
      "category": "sdlc",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": ["sdlc", "planning", "implementation", "review", "testing", "workflows", "features", "bugs", "chores"],
      "strict": false,
      "commands": ["./plugins/sdlc/commands/implement-from-plan.md"]
    },
    {
      "name": "core",
      "source": "./",
      "description": "Foundation plugin with git commands, GitHub integration, and Python orchestration utilities for building other plugins",
      "version": "1.0.0",
      "category": "core",
      "author": {
        "name": "Étienne St-Pierre",
        "email": "me@estpierre.dev"
      },
      "license": "MIT",
      "keywords": ["core", "foundation", "utilities", "building-blocks", "git", "worktree", "github", "orchestration"],
      "strict": false,
      "commands": ["./plugins/core/commands/git-branch.md", "./plugins/core/commands/git-commit.md", "./plugins/core/commands/git-pr.md", "./plugins/core/commands/git-worktree.md", "./plugins/core/commands/create-gh-issue.md", "./plugins/core/commands/read-gh-issue.md"]
    }
  ]
}
