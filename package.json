{
  "name": "agentic-forge",
  "private": true,
  "scripts": {
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:py": "ruff check .",
    "format:prettier": "prettier --check .",
    "format:py": "ruff format --check .",
    "lint": "pnpm lint:md && pnpm lint:py",
    "format": "pnpm format:prettier && pnpm format:py",
    "check": "pnpm lint && pnpm format",
    "fix:py": "ruff check --fix . && ruff format .",
    "fix:prettier": "prettier --write .",
    "fix": "pnpm fix:prettier && pnpm fix:py"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.17.2",
    "prettier": "^3.7.4"
  }
}
