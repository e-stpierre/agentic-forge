{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentic-workflows/progress.schema.json",
  "title": "Workflow Progress",
  "description": "Schema for workflow progress.json documents",
  "type": "object",
  "required": ["schema_version", "workflow_id", "workflow_name", "status"],
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "1.0"
    },
    "workflow_id": {
      "type": "string",
      "description": "Unique workflow execution ID"
    },
    "workflow_name": {
      "type": "string",
      "description": "Workflow name from definition"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "running", "completed", "failed", "paused", "cancelled"],
      "description": "Current workflow status"
    },
    "started_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO8601 timestamp when workflow started"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO8601 timestamp when workflow completed"
    },
    "current_step": {
      "type": ["object", "null"],
      "properties": {
        "name": {
          "type": "string"
        },
        "retry_count": {
          "type": "integer",
          "default": 0
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "completed_steps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/step_progress"
      }
    },
    "pending_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Names of steps not yet started"
    },
    "running_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Names of currently running steps"
    },
    "parallel_branches": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/parallel_branch"
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step": {
            "type": "string"
          },
          "error": {
            "type": "string"
          }
        }
      }
    },
    "variables": {
      "type": "object",
      "description": "Input variables provided to the workflow"
    },
    "step_outputs": {
      "type": "object",
      "description": "Outputs from completed steps"
    }
  },
  "definitions": {
    "step_progress": {
      "type": "object",
      "required": ["name", "status"],
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "running", "completed", "failed", "skipped"]
        },
        "started_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "completed_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "retry_count": {
          "type": "integer",
          "default": 0
        },
        "output_summary": {
          "type": "string"
        },
        "error": {
          "type": ["string", "null"]
        },
        "human_input": {
          "type": ["string", "null"]
        }
      }
    },
    "parallel_branch": {
      "type": "object",
      "required": ["branch_id", "status", "worktree_path", "progress_file"],
      "properties": {
        "branch_id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "running", "completed", "failed"]
        },
        "worktree_path": {
          "type": "string"
        },
        "progress_file": {
          "type": "string"
        }
      }
    }
  }
}
